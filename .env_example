#===========================================
# LLM 服务端点（优先使用火山引擎 VOLC_*）
#===========================================
VOLC_API_KEY=你的_volc_api_key
VOLC_BASE_URL=https://你的_volc_openai_兼容端点/v1

# 若切回官方 OpenAI，可填这两项；使用 VOLC_* 时可留空
# OPENAI_API_KEY=
# OPENAI_BASE_URL=

#===========================================
# 全局模型配置（按需覆盖默认值）
#===========================================
# 规划（Meta-Planner）
META_MODEL=gpt-4.1

# 执行（Executor）
EXEC_MODEL=o4-mini

# 评判（no_parametric_cbr.py）
JUDGE_MODEL=gpt-4o-mini

# 网页抓取后的抽取（server/ai_crawl.py）
CRAWL_MODEL=gpt-4.1

# 图像理解（server/image_tool.py）
# 可禁用：VISION_ENABLED=false 或 VISION_MODEL="" / "disabled"
VISION_ENABLED=true
VISION_MODEL=gemini-2.5-pro-preview-05-06

# 视频问答多模态（server/video_tool.py）
# 可禁用：VIDEO_VISION_ENABLED=false 或 VIDEO_VISION_MODEL="" / "disabled"
VIDEO_VISION_ENABLED=true
VIDEO_VISION_MODEL=gemini-2.5-pro-preview-05-06

# 语音转写 Whisper（server/video_tool.py）
# 可禁用：WHISPER_ENABLED=false 或 WHISPER_MODEL="" / "disabled"
WHISPER_ENABLED=true
WHISPER_MODEL=whisper-1

#===========================================
# 可选第三方服务（不填也能用大多数功能）
#===========================================
# Chunkr：增强 PDF/复杂文档抽取（server/documents_tool.py）
# CHUNKR_API_KEY=你的_chunkr_key

# AssemblyAI：仅 documents_tool.py 使用；video_tool 用 Whisper
# ASSEMBLYAI_API_KEY=你的_assemblyai_key

# Jina：当前代码未使用
# JINA_API_KEY=

#===========================================
# 搜索（SearxNG）
#===========================================
# search_tool.py 默认 http://127.0.0.1:8080
# SEARXNG_HOST=http://127.0.0.1:8080

#===========================================
# Memory / 检索（可按需）
#===========================================
MEMORY_JSONL_PATH=../memory/dummy_memo.jsonl
MEMORY_KEY_FIELD=question
MEMORY_VALUE_FIELD=plan
MEMORY_TOP_K=8
MEMORY_DEVICE=auto
MEMORY_MAX_LENGTH=256
MEMORY_MAX_POS_EXAMPLES=8
MEMORY_MAX_NEG_EXAMPLES=8